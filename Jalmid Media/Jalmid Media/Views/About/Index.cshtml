@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<section class="page-header">
    <div class="container">
        <h1>@Model.AboutBanner.Name</h1>
        <p>@Model.AboutBanner.Desc</p>
    </div>
</section>

<section class="about-story">
    <div class="container">
        <div class="about-content">
            <div class="about-image">
                <img src="@Model.WeAreStory.ImageUrl" alt="DigiRank Team">
            </div>
            <div class="about-text">
                <h2>Bizim Hekayəmiz</h2>
                <p>@Model.WeAreStory.Desc1</p>
                <p>@Model.WeAreStory.Desc2</p>
                <p>@Model.WeAreStory.Desc3</p>
            </div>
        </div>
    </div>
</section>

<section class="mission-values alt-bg">
    <div class="container">
        <div class="section-header">
            <h2>Missiyamız və Dəyərlərimiz</h2>
            <p>Bizi idarə edən və rəqəmsal marketinqə yanaşmamızı formalaşdıran nədir</p>
        </div>
        <div class="mission-content">
            <div class="mission">
                <h3>@Model.Mission.Name</h3>
                <p>@Model.Mission.Desc</p>
            </div>
            <div class="values">
                <h3>Əsas Dəyərlərimiz</h3>
                <ul class="values-list">
                   @foreach (var item in Model.MainValues)
                    {
                        <li>
                            <i class="fas @item.Icon"></i>
                            <div>
                                <h4>@item.Name</h4>
                                <p>@item.Desc</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="team">
    <div class="container">
        <div class="section-header">
            <h2>Komandamız</h2>
            <p>Uğurlu rəqəmsal marketinq strategiyalarımızın arxasında duran mütəxəssislər</p>
        </div>
        <div class="team-grid">
            @foreach (var item in Model.Staffs)
            {
                <div class="team-member">
                    <div class="member-image">
                        <img src="@item.ImageUrl" alt="Team Member">
                    </div>
                    <h3>@item.Name</h3>
                    <p class="member-role">@item.Title</p>
                    <p class="member-bio">@item.Description</p> <br>
                    <div class="member-social">
                        <a href="#"><i class="fab @item.Icon1"></i></a>
                        <a href="#"><i class="fab @item.Icon2"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="achievements alt-bg">
    <div class="container">
        <div class="section-header">
            <h2>Nailiyyətlərimiz</h2>
            <p>Təcrübəmizi və uğurumuzu nümayiş etdirən mərhələlər</p>
        </div>
        <div class="achievements-grid">
            @foreach (var item in Model.Achievements)
            {
                <div class="achievement">
                    <div class="achievement-icon">
                        <i class="fas @item.Icon"></i>
                    </div>
                    <div class="achievement-number">@item.Number</div>
                    <div class="achievement-text">@item.Name</div>
                </div>
            }
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>Bizimlə işləməyə hazırsınız?</h2>
            <p>Rəqəmsal marketinq məqsədlərinizə çatmağınıza necə kömək edə biləcəyimizi müzakirə etmək üçün bu gün komandamızla əlaqə saxlayın.</p>
            <a href="contact.html" class="btn btn-primary">Əlaqə saxlayın</a>
        </div>
    </div>
</section>

