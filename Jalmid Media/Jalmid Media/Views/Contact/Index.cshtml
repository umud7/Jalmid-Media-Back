@model ContactVM
@{
    ViewData["Title"] = "Index";
}

<section class="page-header">
    <div class="container">
        <h1>Bizimlə əlaqə saxlayın</h1>
        <p>Pulsuz konsultasiya üçün komandamızla əlaqə saxlayın</p>
    </div>
</section>

<section class="contact-section">
    <div class="container">
        <div class="contact-content">
            <div class="contact-info">
                <h2>Əlaqə Saxlayın</h2>
                <p>Xidmətlərimizlə bağlı suallarınız var və ya layihənizi müzakirə etmək istəyirsiniz? Aşağıdakı əlaqə məlumatlarından istifadə edərək bizimlə əlaqə saxlayın və ya formu doldurun və biz ən qısa zamanda sizinlə əlaqə saxlayacağıq.</p>

                <div class="contact-details">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Ünvanımız</h3>
                            <p>@Model.ContactInfos.Address</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Telefon nömrəsi</h3>
                            <p>@Model.ContactInfos.Telephone</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-text">
                            <h3>E-poçt ünvanı</h3>
                            <p>@Model.ContactInfos.Epoct</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="contact-text">
                            <h3>İş saatları</h3>
                            <p>@Model.ContactInfos.WorkHours</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="contact-form">
                <h2>Bizə Mesaj Göndərin</h2>
                <form id="contactForm">
                    <div class="form-group">
                        <label for="name">Ad,Soyad</label>
                        <input type="text" id="name" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">E-poçt ünvanı</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Telefon nömrəsi</label>
                        <input type="tel" id="phone" name="phone">
                    </div>

                    <div class="form-group">
                        <label for="company">Şirkət Adı</label>
                        <input type="text" id="company" name="company">
                    </div>

                    <div class="form-group">
                        <label for="service">Maraqlandığınız Xidmət</label>
                        <select id="service" name="service">
                            <option value="">Xidmət seçin</option>
                            <option value="seo">Axtarış Motorunun Optimizasiyası (SEO)</option>
                            <option value="ppc">Klik başına Ödəniş (PPC) Reklamı</option>
                            <option value="social">Sosial Media Marketinqi</option>
                            <option value="email">E-poçt Marketinqi</option>
                            <option value="other">Digər Xidmətlər</option>
                        </select>
                    </div>

                    <div class="form-group full-width">
                        <label for="message">Mesajınız</label>
                        <textarea id="message" name="message" rows="5" required></textarea>
                    </div>

                    <div class="form-group full-width">
                        <button type="submit" class="btn btn-primary">Mesaj Göndər</button>
                    </div>
                </form>
                <div id="formStatus" class="form-status"></div>
            </div>
        </div>
    </div>
</section>

<section class="map-section">
    <div class="container">
        <h2>Bizi tapın</h2>
        <div class="map-container">
            <!-- Placeholder for map -->
            <div class="map-placeholder">
                <img src="~/@Model.ContactMap.Map" alt="Map Location">
            </div>
        </div>
    </div>
</section>

<section class="faq-section alt-bg">
    <div class="container">
        <div class="section-header">
            <h2>Tez-tez verilən suallar</h2>
            <p>Xidmətlərimiz və prosesimizlə bağlı ümumi suallar</p>
        </div>
        <div class="faq-container">
           @foreach (var item in Model.ContactFaqs)
            {
                <div class="faq-item">
                    <div class="faq-question">
                        <h3>@item.Name</h3>
                        <span class="faq-toggle"><i class="fas fa-plus"></i></span>
                    </div>
                    <div class="faq-answer">
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

