@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>@Model.Sliders.Header</h1>
            <p>@Model.Sliders.Desc</p>
            <div class="cta-buttons">
                <a href="contact.html" class="btn btn-primary">Başlayın</a>
                <a href="services.html" class="btn btn-secondary">Xidmətlərimiz</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="~/@Model.Sliders.ImageUrl" alt="Digital Marketing Strategy">
        </div>
    </div>
</section>

<section class="services">
    <div class="container">
        <div class="section-header">
            <h2>Xidmətlərimiz</h2>
            <p>Biznesinizi inkişaf etdirmək üçün hərtərəfli rəqəmsal marketinq həlləri</p>
        </div>
        <div class="services-grid">
           @foreach (var item in Model.XidmetlerHomes)
            {
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas @item.İcon"></i>
                    </div>
                    <h3>@item.Name</h3>
                    <p>@item.Desc</p>
                    <a href="services.html#seo" class="read-more">Ətraflı məlumat<i class="fas fa-arrow-right"></i></a>
                </div>
            }
        </div>
    </div>
</section>

<section class="why-choose-us">
    <div class="container">
        <div class="section-header">
            <h2>Niyə Biz</h2>
            <p>Bizi digər rəqəmsal marketinq agentliklərindən fərqləndirən nədir</p>
        </div>
        <div class="features-grid">
            @foreach (var item in Model.WhyUs)
            {
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas @item.Icon"></i>
                    </div>
                    <h3>@item.Name</h3>
                    <p>@item.Desc</p>
                </div>
            }
        </div>
    </div>
</section>

<section class="testimonials">
    <div class="container">
        <div class="section-header">
            <h2>Müştəri rəyləri</h2>
            <p>Müştərilərimiz xidmətlərimiz haqqında nə deyirlər</p>
        </div>
        <div class="testimonial-slider">
            @foreach (var item in Model.Testimonials)
            {
                <div class="testimonial-slide">
                    <div class="testimonial-content">
                        <p>@item.Header</p>
                        <div class="client-info">
                            <img src="~/@item.ImageUrl" alt="@item.ImageUrl" class="client-photo">
                            <h4>@item.Name</h4>
                            <p>@item.Desc</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="testimonial-controls">
            <button class="prev-btn"><i class="fas fa-chevron-left"></i></button>
            <div class="testimonial-dots">
                @for (int i = 0; i < Model.Testimonials.Count; i++)
                {
                    <span class="dot @(i == 0 ? "active" : "")"></span>
                }
            </div>
            <button class="next-btn"><i class="fas fa-chevron-right"></i></button>
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>@Model.HomeBanner.Name</h2>
            <p>@Model.HomeBanner.Description</p>
            <a href="contact.html" class="btn btn-primary">Bizimlə əlaqə saxlayın</a>
        </div>
    </div>
</section>

